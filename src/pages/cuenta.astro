---
import Layout from "../layouts/Layout.astro"; // Importa el componente Layout desde la ruta especificada
---

<Layout title="Cuenta">
    <!-- Usamos el componente Layout con el título "Cuenta" -->
    <div class="account-container">
        <!-- Contenedor principal para la sección de cuenta del usuario -->
        <h1>Mi cuenta</h1>
        <!-- Encabezado principal de la página de cuenta -->
        <form>
            <!-- Formulario para editar la información de la cuenta -->
            <label for="email">Email</label>
            <!-- Etiqueta para el campo de correo electrónico -->
            <input
                type="email"
                id="email"
                name="email"
                value="charliedoe@gmail.com"
                required
            />
            <!-- Campo de entrada para el correo electrónico, con valor predeterminado, obligatorio -->

            <label for="nombre">Nombre</label>
            <!-- Etiqueta para el campo de nombre -->
            <input
                type="text"
                id="nombre"
                name="nombre"
                value="Charlie Doe"
                required
            />
            <!-- Campo de entrada para el nombre, con valor predeterminado, obligatorio -->

            <div class="password-section">
                <!-- Sección dedicada a la configuración de la contraseña -->
                <h3>Configuración de contraseña</h3>
                <!-- Encabezado de la sección de contraseña -->
                <a href="#">Reset password</a>
                <!-- Enlace para restablecer la contraseña -->
            </div>

            <div class="checkbox-container">
                <!-- Contenedor para la casilla de verificación -->
                <input type="checkbox" id="marketing" name="marketing" />
                <!-- Casilla de verificación para consentir correos de marketing -->
                <label for="marketing"
                    >Doy mi consentimiento para recibir correos electrónicos de
                    marketing.</label
                >
                <!-- Mensaje sobre el consentimiento de marketing -->
            </div>

            <div class="button-container">
                <!-- Contenedor para los botones de acción -->
                <button type="submit">Salvar Cambios</button>
                <!-- Botón para enviar el formulario y guardar los cambios -->
                <button type="button">Cancelar</button>
                <!-- Botón para cancelar la edición -->
            </div>
        </form>
    </div>
</Layout>

<style>
    .account-container {
        background-color: #40d1e2;
        padding: 20px;
        border-radius: 5px;
        width: 100%;
        max-width: 600px;
        color: #333;
    }
    h1 {
        color: #333;
        margin-bottom: 20px;
        font-size: 35px;
        font-weight: bold;
    }
    h3 {
        color: #333;
        margin-bottom: 10px;
        font-size: 20px;
        font-weight: bold;
    }
    form {
        display: flex;
        flex-direction: column;
    }
    label {
        margin-bottom: 5px;
        color: #333;
    }
    input[type="email"],
    input[type="text"] {
        padding: 10px;
        margin-bottom: 15px;
        border: none;
        border-radius: 3px;
    }
    .password-section {
        margin-bottom: 15px;
    }
    .password-section a {
        color: #0000ee;
        text-decoration: none;
    }
    .checkbox-container {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }
    input[type="checkbox"] {
        margin-right: 10px;
    }
    .button-container {
        display: flex;
        gap: 10px;
    }
    button {
        padding: 10px 20px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
    button[type="submit"] {
        background-color: #3498db;
        color: white;
    }
    button[type="button"] {
        background-color: #e0e0e0;
        color: #333;
    }
</style>
