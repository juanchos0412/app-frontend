---
import Layout from "../../layouts/Layout.astro"; // Importa el componente Layout desde la ruta especificada
---

<Layout title="Reinicio del Password">
    <!-- Usamos el componente Layout con el título "Reinicio del Password" -->
    <div class="protected-container">
        <!-- Contenedor principal para la página de reinicio de contraseña -->
        <div class="lock-icon">🔒</div>
        <!-- Icono de candado que indica que la página es protegida -->
        <h1>Página protegida</h1>
        <!-- Encabezado principal que indica que el acceso está restringido -->
        <form action="/cuenta">
            <!-- Formulario que se envía a la ruta /cuenta -->
            <input
                type="password"
                id="password"
                name="password"
                placeholder="Password"
                required
            />
            <!-- Campo para ingresar la nueva contraseña, obligatorio -->
            <button type="submit">Enviar</button>
            <!-- Botón para enviar el formulario -->
        </form>
    </div>
</Layout>

<style>
    .protected-container {
        padding: 20px;
        border-radius: 5px;
        max-width: 400px;
        margin: auto;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    h1 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
        font-size: 35px;
        font-weight: bold;
    }

    .lock-icon {
        font-size: 72px;
        margin-bottom: 20px;
        text-align: center;
    }
    form {
        display: flex;
        flex-direction: column;
    }
    input[type="password"] {
        padding: 10px;
        margin-bottom: 10px;
        border: none;
        border-radius: 3px;
    }
    button {
        padding: 10px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
    button:hover {
        background-color: #2980b9;
    }
</style>
