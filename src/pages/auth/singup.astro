---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Sign up">
    <div class="signup-container">
        <h1>Sign up</h1>
        <form action="/auth/login">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
            
            <label for="nombres">Nombres</label>
            <input type="text" id="nombres" name="nombres" required>
            
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
            
            <div class="checkbox-container">
                <input type="checkbox" id="terms" name="terms" required>
                <label for="terms">Al crear una cuenta, acepto la política de privacidad y los términos de servicio de este sitio web.</label>
            </div>
            
            <div class="checkbox-container">
                <input type="checkbox" id="marketing" name="marketing">
                <label for="marketing">Doy mi consentimiento para recibir correos electrónicos de marketing.</label>
            </div>
            
            <button type="submit">Sign Up</button>
        </form>
        <p class="login">¿Ya tienes una cuenta? <a href="/auth/login">Log In</a></p>
    </div>
</Layout>

<style>

    .signup-container {
        
        padding: 20px;
        border-radius: 5px;
        max-width: 400px;
        margin: auto;
    }
    h1 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
        font-size: 35px;
        font-weight: bold;
    }
    form {
        display: flex;
        flex-direction: column;
    }
    label {
        margin-bottom: 5px;
        color: #333;
    }
    input[type="email"],
    input[type="text"],
    input[type="password"] {
        padding: 10px;
        margin-bottom: 10px;
        border: none;
        border-radius: 3px;
        color: #333;
    }
    .checkbox-container {
        display: flex;
        align-items: flex-start;
        margin-bottom: 10px;
    }
    input[type="checkbox"] {
        margin-right: 10px;
        margin-top: 3px;
    }
    button {
        padding: 10px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        margin-top: 10px;
    }
    button:hover {
        background-color: #2980b9;
    }
    .login {
        text-align: center;
        margin-top: 10px;
        color: #333;
    }
    .login a {
        color: #3498db;
        text-decoration: none;
    }
</style>