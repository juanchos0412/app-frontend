---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Log in">
    <div class="login-container">
        <h1>Log in</h1>
        <form action="/cuenta">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
            
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
            
            <button type="submit">Log In</button>
        </form>
        <p class="signup">Â¿No tienes una cuenta? <a href="/auth/singup">Sign Up</a></p>
    </div>
</Layout>

<style>
    .login-container {
        background-color: #40D1E2;
        padding: 20px;
        border-radius: 5px;
        max-width: 300px;
        margin: auto;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    h1 {
        color: #333;
        text-align: center;
    }
    form {
        display: flex;
        flex-direction: column;
    }
    label {
        margin-bottom: 5px;
        color: #333;
    }
    input {
        padding: 10px;
        margin-bottom: 10px;
        border: none;
        border-radius: 3px;
        color: #333;
    }
    button {
        padding: 10px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }
    button:hover {
        background-color: #2980b9;
    }
    .signup {
        text-align: center;
        margin-top: 10px;
        color: #333;
    }
    .signup a {
        color: #3498db;
        text-decoration: none;
    }
</style>