<Layout title="Admin"> <!-- Usamos el componente Layout con el t√≠tulo "Admin" -->
    <div class="list-container"> <!-- Contenedor principal para la lista de usuarios -->
        <ul class="user-list"> <!-- Lista desordenada que contiene los usuarios -->
            <li class="user-item"> <!-- Elemento de la lista para un usuario -->
                <span class="user-name">Grace Chen</span> <!-- Nombre del usuario -->
                <div class="container-buttons-list"> <!-- Contenedor para los botones de acci√≥n -->
                    <a href="#" class="user-link edit-link" data-user="Grace Chen"> <!-- Enlace para editar el usuario, incluye atributo data-user -->
                        Grace Chen ‚öôÔ∏è
                    </a>
                    <a href="#" class="delete">üóëÔ∏è</a> <!-- Enlace para eliminar al usuario -->
                </div>
            </li>
            <li class="user-item"> <!-- Elemento de la lista para otro usuario -->
                <span class="user-name">Olivia Wang</span> <!-- Nombre del usuario -->
                <div class="container-buttons-list"> <!-- Contenedor para los botones de acci√≥n -->
                    <a href="#" class="user-link edit-link" data-user="Olivia Wang"> <!-- Enlace para editar el usuario -->
                        Olivia Wang ‚öôÔ∏è
                    </a>
                    <a href="#" class="delete">üóëÔ∏è</a> <!-- Enlace para eliminar al usuario -->
                </div>
            </li>
            <!-- Agrega m√°s usuarios seg√∫n sea necesario -->
        </ul>

        <!-- Formulario para editar usuario -->
        <div id="edit-form-container" class="hidden"> <!-- Contenedor del formulario de edici√≥n, inicialmente oculto -->
            <h3>Edit User</h3> <!-- Encabezado del formulario de edici√≥n -->
            <form id="edit-form"> <!-- Formulario para editar los datos del usuario -->
                <label for="user-name">Name:</label> <!-- Etiqueta para el campo de nombre -->
                <input type="text" id="user-name" name="user-name" value="" required> <!-- Campo de entrada para el nombre, obligatorio -->
                
                <div class="button-container"> <!-- Contenedor para los botones de acci√≥n en el formulario -->
                    <button type="submit" class="save-button">Save</button> <!-- Bot√≥n para guardar los cambios -->
                    <button type="button" class="cancel-button">Cancel</button> <!-- Bot√≥n para cancelar la edici√≥n -->
                </div>
            </form>
        </div>

        <div class="button-container"> <!-- Contenedor para el bot√≥n de paginaci√≥n -->
            <button class="next-button">Next</button> <!-- Bot√≥n para avanzar a la siguiente p√°gina de usuarios -->
        </div>
    </div>
</Layout>

<style>
    .list-container {
        background-color: #40d1e2;
        padding: 20px;
        border-radius: 5px;
        width: 100%;
        max-width: 600px;
    }
    .user-list {
        list-style-type: none;
        padding: 0;
    }
    .user-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }
    .user-name {
        color: #333;
    }
    .user-link {
        color: #0000EE;
        text-decoration: none;
        display: flex;
        align-items: center;
    }

    .container-buttons-list {
        display: flex;
        align-items: center;
    }

    .button-container {
        display: flex;
        justify-content: center;
    }

    .next-button {
        background-color: white;
        color: #333;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin: 20px auto auto auto;
    }

    .next-button:hover {
        background-color: #333;
        color: white;
    }

    .next-button:after {
        content: ">";
        margin-left: 5px;
    }

    /* Estilos para el formulario */
    #edit-form-container {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        max-width: 400px;
        margin-top: 20px;
    }

    .hidden {
        display: none;
    }

    .save-button, .cancel-button {
        background-color: white;
        color: #333;
        border: 1px solid #333;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-right: 10px;
    }

    .save-button:hover, .cancel-button:hover {
        background-color: #333;
        color: white;
    }
</style>

<script>
   // Selecciona todos los enlaces de editar
    const editLinks = document.querySelectorAll('.edit-link');
    const editFormContainer = document.getElementById('edit-form-container');
    const userNameInput = document.getElementById('user-name') as HTMLInputElement; // Corregido aqu√≠
    const cancelButton = document.querySelector('.cancel-button');

    editLinks.forEach(link => {
        link.addEventListener('click', function(event) {
            event.preventDefault();
            const userName = this.dataset.user;

            // Mostrar el formulario y rellenar el campo de nombre
            userNameInput.value = userName;  // Aqu√≠ se usa correctamente 'value'
            editFormContainer.classList.remove('hidden');
        });
    });

    // Manejar el bot√≥n de cancelar
    cancelButton.addEventListener('click', function() {
        editFormContainer.classList.add('hidden');
    });

</script>
