<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	body {
		font-family: Arial, sans-serif;
		background-color: #40d1e2;
		color: white;
		margin: 0;
		padding: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.nav-list a {
		color: blue;
		text-decoration: none;
		margin-left: 10px;
		display: flex;
	}
	.nav-list a:hover {
		text-decoration: underline;
	}

	header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		justify-content: flex-end;
		padding: 2rem;
		background-color: #40d1e2;
	}
	
	.nav-list  {
		list-style-type: none;
		display: flex;
		gap: 1rem;
		padding: 1em;
	}



	.abrir-menu,
	.cerrar-menu {
		display: block;
	}

	@media screen and (max-width: 550px) {
		.abrir-menu,
		.cerrar-menu {
			display: block;
			border: 0;
			font-size: 1.25rem;
			background-color: transparent;
			cursor: pointer;
		}

		.abrir-menu {
			color: white;
		}

		.cerrar-menu {
			color: blue;
		}

		.nav {
			opacity: 0;
			visibility: hidden;
			display: flex;
			flex-direction: column;
			align-items: end;
			gap: 1rem;
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			background-color: #12b0c2;
			padding: 2rem;
			box-shadow: 0 0 0 100vmax rgba(0, 0, 0, 0.5);
			
		}

		.nav.visible {
			opacity: 1;
			visibility: visible;
		}

		.nav-list {
			flex-direction: column;
			align-items: end;
		}

		.nav-list li a {
			color: blue;
		}
	}

	input {
		color: #333;
	}

	footer {
		background-color: #333;
		color: white;
		padding: 1em;
		text-align: center;
		margin: auto auto 0 auto;
		width: 100%;
	}

	footer p {
		margin-bottom: 20px;
	}

	footer h3 {
		font-weight: bold;
	}

	footer .enlaces {
		display: flex;
		justify-content: center;
		margin-top: 1em;
		flex-wrap: wrap;
		gap: 1em;
	}
	footer a {
		color: yellow;
		text-decoration: none;
	}
	footer a:hover {
		text-decoration: underline;
	}
</style>
